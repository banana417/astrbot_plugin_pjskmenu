{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PJSKMenu Plugin Configuration",
  "type": "object",
  "properties": {
    "group_whitelist": {
      "type": "array",
      "title": "游戏白名单群组",
      "description": "允许使用该游戏的群组列表",
      "items": {
        "type": "integer"
      },
      "default": []
    },
    "answer_aliases": {
      "type": "object",
      "title": "答案别名",
      "description": "人物名称的可接受别名",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    }
  },
  "required": [
    "group_whitelist"
  ]
}
